worker_processes 1;

events {
    worker_connections 1024;
}

container_commands:
  01_mkdir:
    command: "mkdir -p /var/app/current/dist"
    ignoreErrors: true
  02_cp:
    command: "cp -r /var/app/staging/dist/* /var/app/current/dist/"
    ignoreErrors: true

http {
    include       mime.types;
    default_type  application/octet-stream;

    sendfile        on;
    keepalive_timeout  65;

    types_hash_max_size 2048;
    types_hash_bucket_size 128;

    server {
        listen       8080;
        server_name  localhost;

        location / {
            root   /var/app/current/piomsfe/dist;
            try_files $uri $uri/ /index.html;
        }

        error_page   500 502 503 504  /50x.html;
        location = /50x.html {
            root   /usr/share/nginx/html;
        }
    }
}
